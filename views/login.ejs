<%- include('partials/header'); -%>

<% if (!user) { %>
  <a href="/login">Login</a>
  <a href="/cart" class="cart-btn-disable"><i class="fas fa-shopping-cart"></i></a>
</header>

  <div class="login-image" loading="lazy"></div>


<div>
<form action='/auth' method="POST" class="form-container" autocomplete="off">
  <div class="grid-item-form">
    <h1 style="color:red; padding-bottom: 10px; font-size: 1rem;"><%= errors %></h1>
    <label for="email">Enter your email:</label><br>
    <input type="email" id="email" name="email" value="" autocomplete="email" required><br>
    <label for="password">Password:</label><br>
    <input type="password" id="password" name="password" value="" autocomplete="new-password" required><br><br>
    <input type="submit" value="Log In" class="input-submit-btn">
    <p class="login-paragraph">OR</p>
    <a href="/register" class="register-btn">Register Here</a>
  </div>
  </form>
  </div>
<% } %>

<%- include('partials/footer'); -%>